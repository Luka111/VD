<html>

<head>
	<script language="javascript">
		var proveri = function(){
			var kartica = document.mojaForma.kartica.value;
			console.log('Prva',kartica[0],' Poslednja',kartica[kartica.length-1]);
			var uzorak = /^\d{4}-\d{4}-\d{4}-\d{4}$/;
			var ind = true;
			if (uzorak.test(kartica)){
				if ((kartica[0]!=0) && (kartica[kartica.length-1]!=0)){
					alert('Dobro si uneo za karticu');
				}else{
					alert('Zamalo za karticu al ne');
					ind = false;
				}
			}else{
				alert('Lose za karticu');
				ind = false;
			}
		}
	</script>
<head>

<body>
	<form name="mojaForma">
		<span> Unesite broj kreditne kartice </span></br>
		<input type="text" name="kartica" size="20"></br>
		<input type="button" name="Submit" value="Submit" onClick="proveri()">
	</form>
</body>

